section#eightPage.special.cases-page.section(data-scrollax-parent='true', style='display:none')
  .content.row.align-middle(data-scrollax="properties: { 'translateX': '-20%' }")
    .large-3.show-for-large.columns
    .small-12.large-6.columns
      center
        header
          h2 Cases
        #casesTree
        #caseInfo.row
          .small-12
            h3#caseName
            #caseDesc
    .small-12.large-5.columns.slide-in.panel-wrapper.hide-on-mobile
      .panel-container.normalscroll
        .panel-content
          .close-button x
          #skg_content.panel-content-item
            +include_case_skg
          #rll_content.panel-content-item
            +include_case_rll
          #ing_content.panel-content-item
            +include_case_ing
  .decorations2.noMouse
    img#curved-lines(src='Features_Curved_Lines.svg')
    img#big-lines(src='Features_BigLines.svg')
    img#small-lines(src='Features_SmallLines.svg')
  img(src='Cloud04Crop.png').cloud.cloud4.noMouse
  img(src='Cloud05.png').cloud.cloud5.noMouse
